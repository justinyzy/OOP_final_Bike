<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ubkie.Controller.WelcomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="歡迎使用YouBike系統"
               style="-fx-font-size: 24px; -fx-text-fill: #e9a03e;"/>
    </HBox>

    <HBox alignment="CENTER" AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200"/>
    </HBox>

    <Button text="租車使用者" onAction="#handleUserButtonAction"
            AnchorPane.bottomAnchor="150.0"
            AnchorPane.leftAnchor="50.0"
            style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"/>

    <Button text="維修人員" onAction="#handleAdminButtonAction"
            AnchorPane.bottomAnchor="150.0"
            AnchorPane.rightAnchor="50.0"
            style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"/>
</AnchorPane>
