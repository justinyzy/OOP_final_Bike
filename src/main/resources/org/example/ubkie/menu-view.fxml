<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ubkie.Controller.User.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="105.0">
        <Label text="功能選單" style="-fx-font-size: 24px; -fx-text-fill: #e9a03e;"/>
        <Button text="租車"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleRentButtonAction" maxWidth="250"/>
        <Button text="還車"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleReturnButtonAction" maxWidth="250"/>
        <Button text="站點查詢"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleStationQueryButtonAction" maxWidth="250"/>
        <Button text="租還車紀錄"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleRentReturnRecordButtonAction" maxWidth="250"/>
        <Button text="悠遊卡資訊"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleCardInfoButtonAction" maxWidth="250"/>
        <Button text="維修通報"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleMaintenanceReportButtonAction" maxWidth="250"/>
        <Button text="帳號設定"
                style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"
                onAction="#handleAccountSettingButtonAction" maxWidth="250"/>
    </VBox>
</AnchorPane>
