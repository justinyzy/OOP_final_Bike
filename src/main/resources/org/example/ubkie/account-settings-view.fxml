<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ubkie.Controller.User.AccountSettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="會員資料" style="-fx-font-size: 24px; -fx-text-fill: #e9a03e;" AnchorPane.topAnchor="70.0" AnchorPane.leftAnchor="105.0"/>

    <AnchorPane AnchorPane.topAnchor="150.0" AnchorPane.leftAnchor="20.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="手機號碼　" />
            <TextField fx:id="phoneNumberField" prefWidth="200"/>
        </HBox>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="200.0" AnchorPane.leftAnchor="20.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="身分證字號" />
            <TextField fx:id="idNumberField" prefWidth="200"/>
        </HBox>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="250.0" AnchorPane.leftAnchor="20.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="ＥＭＡＩＬ" />
            <TextField fx:id="emailField" prefWidth="200"/>
        </HBox>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="300.0" AnchorPane.leftAnchor="20.0">
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="悠遊卡號　" />
            <TextField fx:id="cardNumberField" prefWidth="200"/>
        </HBox>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="370.0" AnchorPane.leftAnchor="120.0">
        <Button text="儲存變更" onAction="#handleSaveButtonAction" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"/>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="420.0" AnchorPane.leftAnchor="120.0">
        <Button text="更改密碼" onAction="#handleChangePasswordButtonAction" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"/>
    </AnchorPane>

    <AnchorPane AnchorPane.topAnchor="520.0" AnchorPane.leftAnchor="240.0">
        <Button text="回上頁" onAction="#handleBackButtonAction" style="-fx-font-size: 16px; -fx-text-fill: white; -fx-background-color: #fec401;"/>
    </AnchorPane>
</AnchorPane>
